
html {
  overflow-y: scroll;
  scroll-behavior: smooth;
  hyphens: auto;
  transition: all 600ms ease;
  overscroll-behavior-y: none;
}

body {
  @apply bg-light-600 dark_(bg-dark-600) transition-all duration-600 ease-out text-dark-50 dark_text-light-300 ;
  min-width: 320px;
  min-height: 100vh;
  line-height: 1.4;
  font-family: var(--font-family-base);
  font-size: 18px;
  font-weight: 400;
  direction: ltr;
  font-synthesis: none;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  transition: all 600ms ease;
  overscroll-behavior-y: none;
}

.header-anchor {
  @apply hidden;
}


hr {
  border-bottom: 1px solid currentColor;
  margin: 4em 0;
}

h1,
h2,
h3,
h4,
h5,
h6 {
  line-height: 1.25;
}

h1,
h2,
h3,
h4,
h5,
h6,
strong,
b {
  font-weight: 800;
}



a,
area,
button,
[role='button'],
input,
label,
select,
summary,
textarea {
  touch-action: manipulation;
}

a {
  text-decoration: none;
  color: var(--c-link);
  transition: color 140ms ease-in-out;
  font-weight: bold;
}

a:hover {
  text-decoration: underline;
  color: var(--c-link-hover);
}

.external-link {
  opacity: 0.9;
}

.external-link::after {
  content: '';
  display: inline-block;
  width: 1em;
  height: 1em;
  opacity: 0.5;
  margin-bottom: -1px;
  background-image: url('data:image/svg+xml;base64,');
}



.fullscreen-container {
  @apply flex flex-col justify-center relative items-center  bg-light-400 dark_bg-dark-800 shadow-xl;
  &:fullscreen {
    @apply overflow-y-scroll;
  }
}
